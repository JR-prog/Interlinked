    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "concurrently": "^7.6.0",
    "jest": "^29.4.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "typescript": "^4.9.4"
  }
